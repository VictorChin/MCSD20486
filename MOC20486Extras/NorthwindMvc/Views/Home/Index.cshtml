@using NorthwindMvc.Content.Localization
@model int
@{
    ViewBag.Title = Strings.Hello;
    ViewBag.message = "<h1>test</h1>";
    Culture = "fr";
    UICulture = "fr";
}
<h2>@Strings.Hello</h2>

<h3>We have had @Model visitors.</h3>

<input id="clickButton" value="@Strings.Show @Strings.Model" type="button" />
@ViewBag.message
@(ViewBag.message)
@Html.Encode(ViewBag.message)
<nav>
    <ul>
        <li><a href="home/person">Home > Person</a> <small>(gets passed a complex model)</small></li>
        <li><a href="muppet/misspiggy">Muppet > Miss Piggy</a> <small>(returns a missing resource)</small></li>
        <li><a href="muppet/kermit">Muppet > Kermit</a> <small>(returns a redirect to Fozzy Bear)</small></li>
        <li><a href="muppet/fozzybear">Muppet > Fozzy Bear</a> <small>(returns an image)</small></li>
        <li><a href="muppet/animal">Muppet > Animal</a> <small>(gets passed a complex view model)</small></li>
        <li><a href="category">Northwind Categories</a> <small>(controller and views generated by Visual Studio)</small></li>
        <li><a href="home/flights">Flights</a> <small>(a view that calls a Web API controller with some async actions)</small></li>
    </ul>
</nav>
@section scripts {
    <script>
        // use jQuery to add a click event handler and show the model in a dialog box
        $('#clickButton').on('click', function () {
            alert('Model passed to this view: @Model');
        });
    </script>
}